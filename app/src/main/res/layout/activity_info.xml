<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    tools:context="gesport.xpertise.com.gesportapk.MainActivity"
    >


    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_height="wrap_content"
        android:textColor="#2F3887"
        android:text="Version "
        android:textSize="20dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="logo"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:paddingLeft="5dp"
        android:id="@+id/user2"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="@+id/imageView"
        android:layout_height="wrap_content"
        android:textColor="#2F3887"
        android:textSize="20dp"
        android:text="Conectado como: "
        />

    <TextView
        android:id="@+id/user"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="a"
        android:textColor="#2F3887"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:text="GesPort - Powered by Xpertise"
        android:textSize="25dp"
        android:onClick="gesport"
        android:textColor="#377b47"
        />
    <TextView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="PolÃ­tica de privacidad"
        android:textColor="#FAB333"
        android:textSize="25dp"
        android:onClick="privacidad"
        />
</RelativeLayout>